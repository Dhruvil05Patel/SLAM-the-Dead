{
  "expo": {
    "name": "SLAM the Dead",
    "slug": "slam-the-dead",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "scheme": "slamthedead",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.slamthedead.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera is required for Visual SLAM tracking and feature detection.",
        "NSMotionUsageDescription": "Motion sensors are required for Dead Reckoning and SLAM algorithms."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.slamthedead.app",
      "permissions": [
        "CAMERA",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "WRITE_EXTERNAL_STORAGE",
        "READ_EXTERNAL_STORAGE",
        "HIGH_SAMPLING_RATE_SENSORS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-sensors",
        {
          "motionPermission": "Allow SLAM the Dead to access device motion sensors for dead reckoning and SLAM tracking."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow SLAM the Dead to access camera for Visual SLAM feature tracking."
        }
      ],
      "./plugins/withARCore.js"
    ],
    "extra": {
      "eas": {
        "projectId": "8cb489a2-6180-4440-9ca0-4a2a8136bee1"
      }
    }
  }
}
